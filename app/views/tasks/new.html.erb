<div class="page-container">
  <h1>Create a Stat</h1>

  <%= form_for(@task) do |f| %>
    <ul class="list error-list">
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>

    <fieldset>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </fieldset>

    <fieldset>
      <%= f.label :time_completed %>
      <%= date_field(:task, :time_completed) %>
    </fieldset>

    <%= f.submit "Create GlueStat", class: "button" %>
  <% end %>
</div>
